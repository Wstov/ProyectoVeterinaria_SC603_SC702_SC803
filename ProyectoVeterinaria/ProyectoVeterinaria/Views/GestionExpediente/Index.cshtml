@{
    ViewData["Veterinaria El Gandero"] = "Gestion Expediente";
}


<section class="mt-5">
    <div class="container">
        <h2 class="text-center mb-4">Expedientes de Mascotas</h2>
        <!-- Botón para crear un nuevo expediente -->
        <div class="mb-3 text-center">
            <a class="btn btn-primary" href="@Url.Action("RegistroExpediente")">Crear Nuevo Expediente</a>
        </div>
        <!-- Barra de búsqueda -->
        <div class="col-md-12">
            <form class="d-flex" role="search">

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Buscar expediente" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-primary" type="button" id="button-addon2">Buscar</button>
                </div>
            </form>
        </div>

@page
@model WEB.Pages.Mascotas.MisMacotasModel
@{
    var idUsuario = new Guid();
    @if (User.Identity.IsAuthenticated)
    {
        idUsuario = Abstracciones.Modelos.Autenticacion.ClaimsPrincipalExtensions.GetIdUsuario(User);
    }
}
@if (Model.mascotas !=null && Model.mascotas.Any())
{
    <section class="mt-5">
        <div class="container">
            <h2 class="text-center mb-4">Mis Mascotas </h2>
        </div>
        <div class="mt-3">
            <a href="addMascota" class="btn btn-primary">Agregar mascota</a>
        </div>
        <br />
        <div class="col-md-12">
           
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Animal</th>
                        <th>Nombre</th>
                        <th>Raza</th>
                        <th>Genero</th>
                        <th>Fecha Nacimiento</th>
                        <th>Caracteristicas</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mascotas in Model.mascotas)
                    {
                        <tr id="mascotas-@mascotas.MascotaID">

                            <td>@Html.DisplayFor(modelItem => mascotas.NombreAnimal)</td>
                            <td>@Html.DisplayFor(modelItem => mascotas.NombreMascota)</td>
                            <td>@Html.DisplayFor(modelItem => mascotas.Raza)</td>
                            <td>@Html.DisplayFor(modelItem => mascotas.Genero)</td>
                            <td>@Html.DisplayFor(modelItem => mascotas.FechaNacimiento)</td>
                            <td>@Html.DisplayFor(modelItem => mascotas.Caracteristicas)</td>
                            <td>
                                <a class="btn btn-sm btn-info w-100" asp-page="/Mascotas/Editar" asp-route-MascotaID="@mascotas.MascotaID">Editar</a>
                                <a class="btn btn-sm btn-danger w-100" asp-page="/Mascotas/Eliminar" asp-route-MascotaID="@mascotas.MascotaID">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>


            </table>

        </div>
    </section>


    
}
else
{
    <br>
    <div class="alert alert-danger" role="alert">

        No tienes Mascotas Registradas puedes registrar una cita si la necesitas en el siguiente enlace:

    </div>
    <div>
        <a class="btn btn-lg btn-success me-md-2" asp-area="" asp-page="/Mascotas/addMascota">Registrar Mascota </a>
    </div>
    <br>
    <div>
        <div><a href="../Index" class="btn btn-secondary w-100" style="margin-top:10px">Volver</a></div>
    </div>
}

